<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="30dp">

    <TextView
        android:id="@+id/titulo_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calculadora Simples"
        android:textAllCaps="true"
        android:layout_marginTop="50dp"
        android:textSize="25dp"
        android:gravity="center"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/num1_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titulo_txt"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="30dp"
        android:padding="10dp"
        android:background="@drawable/et_style"
        android:contentDescription="Primeiro número"
        android:inputType="numberSigned|numberDecimal"
        />

    <EditText
        android:id="@+id/num2_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:layout_below="@id/num1_edit"
        android:padding="10dp"
        android:background="@drawable/et_style"
        android:contentDescription="Segundo número"
        android:inputType="numberSigned|numberDecimal"
        />

    <Button
        android:id="@+id/sum_btn"
        android:onClick="somar"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:text="+"
        android:textSize="20dp"
        android:layout_below="@id/num2_edit"
        android:background="@drawable/btn_style"
        />

    <Button
        android:id="@+id/minus_btn"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="-"
        android:textSize="20dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/num2_edit"
        android:layout_toRightOf="@id/sum_btn"
        android:background="@drawable/btn_style"
        />

    <Button
        android:id="@+id/mul_btn"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="x"
        android:textSize="20dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/num2_edit"
        android:layout_toRightOf="@id/minus_btn"
        android:background="@drawable/btn_style"
        />

    <Button
        android:id="@+id/div_btn"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="/"
        android:textSize="20dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/num2_edit"
        android:layout_toRightOf="@id/mul_btn"
        android:background="@drawable/btn_style"
        />

    <TextView
        android:id="@+id/resultado_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sum_btn"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="20dp"
        android:text="Resultado"
        android:textAllCaps="true"
        android:gravity="center"
        android:textSize="30dp"
        />

    <TextView
        android:id="@+id/resultado_variavel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_below="@id/resultado_txt"
        android:textSize="50dp"
        android:gravity="center"/>
    
</RelativeLayout>