<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width = "match_parent"
    android:layout_height= "match_parent"
    android:background="#5A95ED"
    android:padding="10dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/btContrast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="com.example.cameraprocessing.ProcessingActivity">


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="38dp"
            android:clickable="true"
            android:contentDescription="TODO"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@android:drawable/ic_menu_save"
            tools:ignore="ContentDescription,HardcodedText,TouchTargetSizeCheck"
            android:focusable="true" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabReturn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="38dp"
            android:layout_marginTop="28dp"
            android:clickable="true"
            android:contentDescription="TODO"
            android:focusable="true"
            app:layout_constraintEnd_toStartOf="@+id/fabSave"
            app:layout_constraintHorizontal_bias="0.062"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@android:drawable/ic_input_delete"
            tools:ignore="ContentDescription,HardcodedText,TouchTargetSizeCheck,DuplicateSpeakableTextCheck" />

        <ImageView
            android:id="@+id/img_viewer"
            android:layout_width="404dp"
            android:layout_height="430dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="108dp"
            android:importantForAccessibility="no"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ImageContrastCheck" />

        <Button
            android:id="@+id/btNormal"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="24dp"
            android:text="@string/normal"
            android:backgroundTint="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_viewer"
            app:cornerRadius="14dp"
            />

        <Button
            android:id="@+id/button3"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/black"
            android:text="@string/contraste"
            app:cornerRadius="14dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btNormal"
            />

        <Button
            android:id="@+id/btBrightness"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/black"
            android:text="@string/brilho"
            android:textColor="#3E2723"
            app:cornerRadius="14dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button3"
            tools:ignore="TouchTargetSizeCheck" />

        <Button
            android:id="@+id/btNegative"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/black"
            android:text="@string/negativo"
            app:cornerRadius="14dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btBrightness" />

        <Button
            android:id="@+id/btCinza"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/black"
            android:text="@string/cinza"
            app:cornerRadius="14dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btNegative" />

        <Button
            android:id="@+id/btSepia"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/black"
            android:text="@string/sepia"
            app:cornerRadius="14dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btCinza" />

        <Button
            android:id="@+id/btSobel"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="28dp"
            android:backgroundTint="@color/black"
            android:text="@string/sobel"
            app:cornerRadius="14dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btSepia" />


        <SeekBar
            android:id="@+id/sbConstrast"
            android:layout_width="230dp"
            android:layout_height="47dp"
            android:layout_marginStart="13dp"
            android:layout_marginTop="121dp"
            android:layout_marginEnd="17dp"
            android:max="100"
            android:progress="50"
            android:min="0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/button3"
            app:layout_constraintTop_toBottomOf="@+id/img_viewer"
            tools:ignore="UnusedAttribute" />

        <SeekBar
            android:id="@+id/sbBrightness"
            android:layout_width="230dp"
            android:layout_height="65dp"
            android:layout_marginTop="25dp"
            android:max="100"
            android:progress="50"
            android:min="0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btBrightness"
            app:layout_constraintTop_toBottomOf="@+id/sbConstrast"
            tools:ignore="UnusedAttribute" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>

